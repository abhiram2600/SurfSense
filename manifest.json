{
  "manifest_version": 3,
  "name": "SurfSense",
  "version": "1.0",
  "description": "Chrome extension for tracking productive work time.",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "idle", "scripting", "activeTab", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
